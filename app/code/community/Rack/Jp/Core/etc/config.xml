                    <quote_address_total_discount>Rack_Jp_Core_Model_Sales_Quote_Address_Total_Discount</quote_address_total_discount>
                    <order_address>Rack_Jp_Core_Model_Sales_Order_Address</order_address>
                    <order>Rack_Jp_Core_Model_Sales_Order</order>
                    <order_creditmemo_total_discount>Rack_Jp_Core_Model_Sales_Order_Creditmemo_Total_Discount</order_creditmemo_total_discount>
                    <order_creditmemo_total_shipping>Rack_Jp_Core_Model_Sales_Order_Creditmemo_Total_Shipping</order_creditmemo_total_shipping>
