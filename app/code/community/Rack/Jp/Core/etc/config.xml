                </rewrite>
            </sales>
            <salesrule>
                <rewrite>
                    <validator>Rack_Jp_Core_Model_SalesRule_Validator</validator>
                </rewrite>
            </salesrule>
            <sales_mysql4>
                <rewrite>
                    <order>Rack_Jp_Core_Model_Mysql4_Sales_Order</order>
                    <order_grid_collection>Rack_Jp_Core_Model_Mysql4_Sales_Order_Grid_Collection</order_grid_collection>
                    <order_creditmemo>Rack_Jp_Core_Model_Mysql4_Sales_Order_Creditmemo</order_creditmemo>
                    <order_shipment>Rack_Jp_Core_Model_Mysql4_Sales_Order_Shipment</order_shipment>
                    <order_invoice>Rack_Jp_Core_Model_Mysql4_Sales_Order_Invoice</order_invoice>
                </rewrite>
            </sales_mysql4>
            <customer_mysql4>
                <rewrite>
                    <customer_collection>Rack_Jp_Core_Model_Mysql4_Customer_Collection</customer_collection>
                </rewrite>
            </customer_mysql4>
            <customer_resource>
                <rewrite>
                    <customer_collection>Rack_Jp_Core_Model_Resource_Customer_Collection</customer_collection>
                </rewrite>
            </customer_resource>
            <reports_mysql4>
                <rewrite>
                    <customer_orders_collection>Rack_Jp_Core_Model_Mysql4_Reports_Customer_Orders_Collection</customer_orders_collection>
                    <customer_totals_collection>Rack_Jp_Core_Model_Mysql4_Reports_Customer_Totals_Collection</customer_totals_collection>
                    <review_customer_collection>Rack_Jp_Core_Model_Mysql4_Reports_Review_Customer_Collection</review_customer_collection>
                    <customer_collection>Rack_Jp_Core_Model_Mysql4_Reports_Customer_Collection</customer_collection>
                    <order_collection>Rack_Jp_Core_Model_Mysql4_Reports_Order_Collection</order_collection>
                </rewrite>
            </reports_mysql4>
            <sales_resource>
                <rewrite>
                    <order>Rack_Jp_Core_Model_Resource_Order</order>
                    <!--<order_grid_collection>Rack_Jp_Core_Model_Resource_Order_Grid_Collection</order_grid_collection>-->
                    <order_creditmemo>Rack_Jp_Core_Model_Resource_Order_Creditmemo</order_creditmemo>
                    <order_shipment>Rack_Jp_Core_Model_Resource_Order_Shipment</order_shipment>
                    <order_invoice>Rack_Jp_Core_Model_Resource_Order_Invoice</order_invoice>
                </rewrite>
            </sales_resource>
            <reports_resource>
                <rewrite>
                    <customer_orders_collection>Rack_Jp_Core_Model_Resource_Reports_Customer_Orders_Collection</customer_orders_collection>
                    <customer_totals_collection>Rack_Jp_Core_Model_Resource_Reports_Customer_Totals_Collection</customer_totals_collection>
                    <review_customer_collection>Rack_Jp_Core_Model_Resource_Reports_Review_Customer_Collection</review_customer_collection>
                    <customer_collection>Rack_Jp_Core_Model_Resource_Reports_Customer_Collection</customer_collection>
                    <order_collection>Rack_Jp_Core_Model_Resource_Reports_Order_Collection</order_collection>
                </rewrite>
            </reports_resource>
            <directory>
                <rewrite>
                    <currency>Rack_Jp_Core_Model_Currency</currency>
                </rewrite>
            </directory>
            <directory_resource>
                <rewrite>
                    <region_collection>Rack_Jp_Core_Model_Resource_Directory_Region_Collection</region_collection>
                </rewrite>
            </directory_resource>
            <jpcore>
                <class>Rack_Jp_Core_Model</class>
            </jpcore>
        </models>
        <helpers>
            <jpcore>
                <class>Rack_Jp_Core_Helper</class>
            </jpcore>
        </helpers>
        <blocks>
            <adminhtml>
                <rewrite>
                    <customer_online_grid>Rack_Jp_Core_Block_Adminhtml_Customer_Online_Grid</customer_online_grid>
                    <permissions_user_grid>Rack_Jp_Core_Block_Adminhtml_Permissions_User_Grid</permissions_user_grid>
                    <permissions_role_grid_user>Rack_Jp_Core_Block_Adminhtml_Permissions_Role_Grid_User</permissions_role_grid_user>
                    <newsletter_subscriber_grid>Rack_Jp_Core_Block_Adminhtml_Newsletter_Subscriber_Grid</newsletter_subscriber_grid>
                    <report_tag_customer_grid>Rack_Jp_Core_Block_Adminhtml_Report_Tag_Customer_Grid</report_tag_customer_grid>
                    <report_grid_column_renderer_currency>Rack_Jp_Core_Block_Adminhtml_Report_Grid_Column_Renderer_Currency</report_grid_column_renderer_currency>
                    <review_main>Rack_Jp_Core_Block_Adminhtml_Review_Main</review_main>
                    <review_edit_form>Rack_Jp_Core_Block_Adminhtml_Review_Edit_Form</review_edit_form>
                    <tag_customer_grid>Rack_Jp_Core_Block_Adminhtml_Tag_Customer_Grid</tag_customer_grid>
                    <catalog_product_edit_tab_tag_customer>Rack_Jp_Core_Block_Adminhtml_Catalog_Product_Edit_Tab_Tag_Customer</catalog_product_edit_tab_tag_customer>
                    <catalog_product_helper_form_price>Rack_Jp_Core_Block_Adminhtml_Catalog_Product_Helper_Form_Price</catalog_product_helper_form_price>
                    <system_account_edit_form>Rack_Jp_Core_Block_Adminhtml_System_Account_Edit_Form</system_account_edit_form>
                    <sales_order_view_info>Rack_Jp_Core_Block_Adminhtml_Sales_Order_View_Info</sales_order_view_info>
                    <widget_grid_column_renderer_price>Rack_Jp_Core_Block_Adminhtml_Widget_Grid_Column_Renderer_Price</widget_grid_column_renderer_price>
                    <widget_grid_column_renderer_currency>Rack_Jp_Core_Block_Adminhtml_Widget_Grid_Column_Renderer_Currency</widget_grid_column_renderer_currency>
                    <customer_edit_tab_addresses>Rack_Jp_Core_Block_Adminhtml_Customer_Edit_Tab_Addresses</customer_edit_tab_addresses>
                </rewrite>
            </adminhtml>
            <customer>
                <rewrite>
                    <address_edit>Rack_Jp_Core_Block_Customer_Address_Edit</address_edit>
                    <widget_name>Rack_Jp_Core_Block_Customer_Widget_Name</widget_name>
                    <widget_dob>Rack_Jp_Core_Block_Customer_Widget_Dob</widget_dob>
                    <widget_gender>Rack_Jp_Core_Block_Customer_Widget_Gender</widget_gender>
                </rewrite>
            </customer>
            <jpcore>
                <class>Rack_Jp_Core_Block</class>
            </jpcore>
            <checkout>
                <rewrite>
                    <onepage_billing>Rack_Jp_Core_Block_Checkout_Onepage_Billing</onepage_billing>
                </rewrite>
            </checkout>
        </blocks>
        <resources>
            <jpcore_setup>
                <setup>
                    <module>Rack_Jp_Core</module>
                    <class>Rack_Jp_Core_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </jpcore_setup>
        </resources>
        <fieldsets>
            <sales_copy_order>
                <customer_firstname>
                    <to_edit>*</to_edit>
                </customer_firstname>
                <customer_lastname>
                    <to_edit>*</to_edit>
                </customer_lastname>
                <remote_ip>
                    <to_edit>*</to_edit>
                </remote_ip>
                <customer_dob>
                    <to_edit>*</to_edit>
                </customer_dob>
                <customer_gender>
                    <to_edit>*</to_edit>
                </customer_gender>
            </sales_copy_order>
            <sales_copy_order_billing_address>
                <firstnamekana>
                    <to_order>*</to_order>
                </firstnamekana>
                <lastnamekana>
                    <to_order>*</to_order>
                </lastnamekana>
            </sales_copy_order_billing_address>
            <sales_copy_order_shipping_address>
                <firstnamekana>
                    <to_order>*</to_order>
                </firstnamekana>
                <lastnamekana>
                    <to_order>*</to_order>
                </lastnamekana>
            </sales_copy_order_shipping_address>
            <sales_convert_quote>
                <customer_firstnamekana>
                    <to_order>*</to_order>
                </customer_firstnamekana>
                <customer_lastnamekana>
                    <to_order>*</to_order>
                </customer_lastnamekana>
            </sales_convert_quote>
            <sales_convert_quote_address>
                <firstnamekana>
                    <to_order_address>*</to_order_address>
                    <to_customer_address>*</to_customer_address>
                </firstnamekana>
                <lastnamekana>
                    <to_order_address>*</to_order_address>
                    <to_customer_address>*</to_customer_address>
                </lastnamekana>
            </sales_convert_quote_address>
            <sales_convert_order_address>
                <firstnamekana>
                    <to_quote_address>*</to_quote_address>
                </firstnamekana>
                <lastnamekana>
                    <to_quote_address>*</to_quote_address>
                </lastnamekana>
            </sales_convert_order_address>
            <customer_account>
                <firstnamekana>
                    <to_quote>customer_firstnamekana</to_quote>
                    <create>1</create>
                    <update>1</update>
                    <name>1</name>
                </firstnamekana>
                <lastnamekana>
                    <to_quote>customer_lastnamekana</to_quote>
                    <create>1</create>
                    <update>1</update>
                    <name>1</name>
                </lastnamekana>
            </customer_account>
            <customer_address>
                <firstnamekana>
                    <to_quote_address>*</to_quote_address>
                </firstnamekana>
                <lastnamekana>
                    <to_quote_address>*</to_quote_address>
                </lastnamekana>
            </customer_address>
            <checkout_onepage_billing>
                <firstnamekana>
                    <to_customer>*</to_customer>
                </firstnamekana>
                <lastnamekana>
                    <to_customer>*</to_customer>
                </lastnamekana>
            </checkout_onepage_billing>
            <checkout_onepage_quote>
                <customer_firstnamekana>
                    <to_customer>firstnamekana</to_customer>
                </customer_firstnamekana>
                <customer_lastnamekana>
                    <to_customer>lastnamekana</to_customer>
                </customer_lastnamekana>
            </checkout_onepage_quote>
        </fieldsets>
        <events>
            <controller_front_init_before>
                <observers>
                    <rewrire_classes_depending_on_version>
                        <type>model</type>
                        <class>jpcore/observer</class>
                        <method>rewriteClasses</method>
                    </rewrire_classes_depending_on_version>
                </observers>
            </controller_front_init_before>

        </events>
    </global>
    <frontend>
        <translate>
            <modules>
                <Rack_Jp_Core>
                    <files>
                        <default>Rack_Jp_Core.csv</default>
                    </files>
                </Rack_Jp_Core>
            </modules>
        </translate>
        <layout>
            <updates>
                <jpcore>
                    <file>jp_core.xml</file>
                </jpcore>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <events>
            <sales_convert_order_to_quote>
                <observers>
                    <jpcore>
                        <class>jpcore/observer</class>
                        <method>restoreCheckoutMethod</method>
                    </jpcore>
                </observers>
            </sales_convert_order_to_quote>
            <checkout_submit_all_after>
                <observers>
                    <jpcore>
                        <class>jpcore/observer</class>
                        <method>restoreAccountInfo</method>
                    </jpcore>
                </observers>
            </checkout_submit_all_after>
        </events>
        <translate>
            <modules>
                <Rack_Jp_Core>
                    <files>
                        <default>Rack_Jp_Core.csv</default>
                    </files>
                </Rack_Jp_Core>
                <Mage_Connect>
                    <files>
                        <default>Mage_Connect.csv</default>
                    </files>
                </Mage_Connect>
            </modules>
        </translate>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <jpcore translate="title" module="jpcore">
                                            <title>Japanese Environment Setting</title>
                                        </jpcore>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <system>
            <children>
                <config>
                    <children>
                        <jpcore>
                            <title>Japanese Environment Setting</title>
                        </jpcore>
                    </children>
                </config>
            </children>
        </system>
        <layout>
            <updates>
                <jpcore>
                    <file>jp_core.xml</file>
                </jpcore>
            </updates>
        </layout>
    </adminhtml>
    <admin>
        <fieldsets>
            <customer_dataflow>
                <firstnamekana>
                    <billing>1</billing>
                    <shipping>1</shipping>
                    <required>1</required>
                    <mapped>1</mapped>
                </firstnamekana>
                <lastnamekana>
                    <billing>1</billing>
                    <shipping>1</shipping>
                    <required>1</required>
                    <mapped>1</mapped>
                </lastnamekana>
            </customer_dataflow>
        </fieldsets>
    </admin>
    <default>
        <tax>
            <calculation>
                <round>round</round>
            </calculation>
        </tax>
        <jpcore>
            <address>
                <enablejp>1</enablejp>
                <onlyjp>1</onlyjp>
            </address>
            <name>
                <enablejp>1</enablejp>
                <usekana>1</usekana>
            </name>
            <currency>
                <position>32</position>
                <remove_decimal>JPY</remove_decimal>
            </currency>
            <additional>
                <useselectfordob>0</useselectfordob>
                <startyear>1900</startyear>
                <defaultyear>1980</defaultyear>
                <defaultgender>0</defaultgender>
                <useradioforgender>0</useradioforgender>
            </additional>
        </jpcore>
    </default>
    <phpunit>
        <suite>
            <modules>
                <Rack_Jp_Core />
            </modules>
        </suite>
    </phpunit>
</config>
