    <global>
        <models>
            <core>
                <rewrite>
                    <locale>Rack_Jp_Core_Model_Locale</locale>
                    <store>Rack_Jp_Core_Model_Store</store>
                </rewrite>
            </core>
            <tax>
                <rewrite>
                    <calculation>Rack_Jp_Core_Model_Tax_Calculation</calculation>
